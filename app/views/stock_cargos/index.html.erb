

<h2>我的全部货物</h2>
<table>
  <%unless @stock_cargos.blank?%>
  <tr>
     
    <th>货物</th>
      <th>包装</th>     
    <th>货物大类</th>
     <th>总计发布</th>
     <th>状态</th>
     <th>发布货源</th>


  </tr>

  <% @stock_cargos.each do |stock_cargo| %>
    <tr>   
  
      <td>       
        <a class ="show_float" href="/stock_cargos/show/<%=stock_cargo.id.to_s%>"><%=h stock_cargo.cate_name %></a></td> 
      <td><%=h stock_cargo.package_name %></td>     
    
      <td><%=h $cargo_big_category[stock_cargo.big_category] %></td>   
      <td><%=h stock_cargo.sent_weight %>吨/<%=h stock_cargo.sent_bulk %>方</td>
      <td><%=h stock_cargo.status%></td>     
      <td><a class="cargo_fabu" href="/cargos/new/<%=stock_cargo.id.to_s%>">发布货源</a></td>
    </tr>
  <% end %>
    </table>
    <%else%>
    <p>请先添加货物， 然后发布货源</p>
    <% end %>

<%= will_paginate @trucks ,:class=>"page_navi_link"%>
<div class="caozuo_area" ></div>

<div class="bottom_link">
  <a class="show_float"  href="/stock_cargos/new">添加新的货物</a>
</div>



