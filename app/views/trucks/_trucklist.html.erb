<table>
  <tr>
    <th>车辆</th>
    <th>出发</th>
    <th>到达</th>
    <th>回程</th>
    <!--  <th>公司</th>-->

    <th>有效期</th>
    <th>发布时间</th>
     <th>状态</th>
    <th>货主操作</th>
  </tr>


  <% if not @trucks.nil? %>
    <% @trucks.each do |truck|%>
   <%unless truck.nil? %>
        <tr>
                   <td>  <a class="show_float" href="/trucks/show/<%=truck.id%>">
              <%=truck.paizhao%>,<%=truck.dunwei%>吨
              <%=truck.length%>米,<%=$truck_shape[truck.shape]%>
            </a></td>
          <td><%= truck.fcity_name %></td>
          <td><%= truck.tcity_name %></td>

          <td><%=$truck_huicheng[truck.huicheng]%></td>

          <td><%= truck.send_date %>天</td>
          <td><%= truck.created_at.to_s.slice(5,11) %></td>
          <td><%= truck.status %></td>


          <td>
             <%unless session[:user_id].nil?%>
            <%if truck.user_id==session[:user_id]%>
            车主
            <%else%>
              <a class="baojia" href="/trucks/<%=truck.id%>/inqueries/new">询价</a>
              <%end%>
              <%else%>
              登录后询价
              <%end%>
          </td>

        </tr>
      <% end %>
    <% end %>
  <% end %>
</table>
<%= will_paginate @trucks ,:class=>"page_navi_link"%>
