
    <div id="login">
      <div class="form_header">
        <h2>W090 用户登录</h2>
      </div>
      <form class="show_form" action="/users/authenticate">

        <div class="field">
          <label for="email">用户名或Email:</label>
          <input id="email" name="email" type="text" />
        </div>

        <div class="field">
          <label for="password">密码:</label>
          <input id="password" name="password" type="password" />
        </div>

        <div class="field">          
          <input  id="remember_me" name="remember_me" type="checkbox"></input>
          <label  for="remember_me">记住用户名和密码</label>
        </div>
        
        <div class="field">
        <p id="notice"><%= notice %></p>
        </div>


        <div class="actions">
          <input type="submit" class="submit_button login_button" value="登录"  />
        </div>
        <div class="actions">
          <a href="/users/pw_reset_request" style="margin-left:  30px;">忘记密码</a>
          <a href="/users/new" style="margin-left:  70px;">新用户注册</a>
        </div>
      </form>
    </div>
