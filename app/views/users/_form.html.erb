

<%= form_for(@user,:as=>:user,:html => {:class => "show_form"}) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "错误") %> 有一个错误:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>用户名:</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label id="register_email">Email:(如无Email,可用qq号码@qq.com或者手机号码@163.com)</label>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <label>确认设置的Email:</label>
    <input id="email_confirm" name="email_confirm" type="text"/>
  </div>


  <div class="field">
    <label>设置密码:</label>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <label>确认设置的密码:</label>
    <%= f.password_field :password_confirmation %>
  </div>


  <div class="actions">
    <%= f.submit("确定") %>
  </div>

<% end %>

<%=flash[:notice]%>
