<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Users: <%= controller.action_name %></title>
    <%= javascript_include_tag "jquery-1.4.2.js" %>
    <%= javascript_include_tag "jquery.form.js" %>
    <%= javascript_include_tag "jquery.validate.js" %>

    <%= javascript_include_tag "date.js" %>
    <%= javascript_include_tag "jquery.dataTables.min.js" %>
    <%= javascript_include_tag "tablecloth.js" %>
    <%= javascript_include_tag "jquery.datePicker.js" %>

    <%= javascript_include_tag "jquery.inline-confirmation.js" %>
    <%= javascript_include_tag "g1.js" %>
    <%= stylesheet_link_tag 'g1' %>
    <%= stylesheet_link_tag 'tablecloth' %>
    <%= stylesheet_link_tag 'datePicker' %>
    <%= stylesheet_link_tag 'form' %>
  </head>
  <body>
    <div id="login">
      <div class="form_header">
        <h2>W090 用户登录</h2>
      </div>
      <form class="show_form" action="/users/authenticate">

        <div class="field">
          <label for="email">用户名或Email:</label>
          <input id="email" name="email" type="text" />
        </div>

        <div class="field">
          <label for="password">密码:</label>
          <input id="password" name="password" type="password" />
        </div>

        <div class="field">          
          <input  id="remember_me" name="remember_me" type="checkbox"></input>
          <label  for="remember_me">记住用户名和密码，下次可直接登录免输入</label>
        </div>
        
        <div class="field">
        <p id="notice"><%= notice %></p>
        </div>


        <div class="actions">
          <input type="submit" class="submit_button login_button" value="登录"  />
        </div>
        <div class="actions">
          <a href="/users/pw_reset_request" style="margin-left:  30px;">忘记密码</a>
          <a href="/users/new" style="margin-left:  70px;">新用户注册</a>
        </div>
      </form>
    </div>

  </body>
</html>